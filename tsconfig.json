{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node16",
        "moduleResolution": "node16",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": false
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}